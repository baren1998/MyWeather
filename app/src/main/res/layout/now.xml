<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/degree_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°C"
            android:textColor="@android:color/white"
            android:textSize="60sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/current_condition_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/current_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="阴"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_humidity"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:text="湿度 90%"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_wind"/>

        <TextView
            android:id="@+id/current_wind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="北风1级"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:backgroundTint="#8000"
            android:background="@drawable/rounded_rectangle_green"
            android:text="今日天气提示"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/weather_tips"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:text="今天有雨，略微偏凉，还是蛮舒适的。"/>

    </LinearLayout>

</LinearLayout>